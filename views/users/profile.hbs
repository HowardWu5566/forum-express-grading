<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{userProfile.image}}" class="img-fluid m-3" style="border-radius:50%; width:300px; height:300px"
        alt="image">
    </div>
    <div class="col-md-8">
      <h3 class="pt-3">{{ userProfile.name }}</h3>
      <p>{{ userProfile.email }}</p>
      <small class="ms-2">{{userProfile.FavoritedRestaurants.length}} 已收藏餐廳</small>
      <br>
      <small class="ms-2">{{comments.length}} 已評論餐廳</small>
      <br>
      <small class="ms-2">{{userProfile.Followers.length}} followers</small>
      <br>
      <small class="ms-2">{{userProfile.Followings.length}} followings</small>
      <br>
      {{#ifCond user.id userProfile.id}}<a href="/users/{{user.id}}/edit" type="button"
        class="btn btn-primary m-3">edit</a>{{/ifCond}}
    </div>
  </div>
</div>
<div class="row">
  <div class="col-4">
    <div class="card mb-3">
      <div class="card-header">
        {{userProfile.Followers.length}} followers
      </div>
      <div class="card-body">
        {{#each userProfile.Followers}}
        <a href="/users/{{this.id}}" style="text-decoration:none">
          <img src="{{this.image}}" alt="{{this.name}}" class="rounded m-2" title="{{this.name}}" width="50"
            height="50">
        </a>
        {{/each}}
        {{#unless userProfile.Followers.length}}此用戶尚無追隨者{{/unless}}
      </div>
    </div>

    <div class="card mb-3">
      <div class="card-header">
        {{userProfile.Followings.length}} followings
      </div>
      <div class="card-body">
        {{#each userProfile.Followings}}
        <a href="/users/{{this.id}}" style="text-decoration:none">
          <img src="{{this.image}}" alt="{{this.name}}" class="rounded m-2" title="{{this.name}}" width="50"
            height="50">
        </a>
        {{/each}}
        {{#unless userProfile.Followings.length}}此用戶尚未追蹤任何人{{/unless}}
      </div>
    </div>
  </div>




  <div class="col-8">
    <div class="card mb-3">
      <div class="card-header">
        {{userProfile.FavoritedRestaurants.length}} 已收藏餐廳
      </div>
      <div class="card-body">
        {{#each userProfile.FavoritedRestaurants}}
        <a href="/restaurants/{{this.id}}" style="text-decoration:none">
          <img src="{{this.image}}" class="rounded m-2" title="{{this.name}}" width="50" height="50">
        </a>
        {{/each}}
        {{#unless userProfile.FavoritedRestaurants.length}}此用戶尚未收藏任何餐廳{{/unless}}
      </div>
    </div>

    <div class="card mb-3">
      <div class="card-header">
        {{comments.length}} 已評論餐廳
      </div>
      <div class="card-body">
        {{#each comments}}
        <a href="/restaurants/{{this.restaurantId}}" style="text-decoration:none">
          <img src="{{this.Restaurant.image}}" class="rounded m-2" title="{{this.Restaurant.name}}" width="50"
            height="50">
        </a>
        {{/each}}
        {{#unless comments.length}}此用戶尚未評論任何餐廳{{/unless}}
      </div>
    </div>
  </div>
</div>